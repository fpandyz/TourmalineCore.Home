{
  "name": "tourmalinecore_website",
  "version": "3.1.4",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:static": "cross-env IS_STATIC_MODE=true npm run dev",
    "build": "next build",
    "postbuild": "npx next-sitemap",
    "start": "next start",
    "lint": "run-s -c lint:ts lint:css",
    "lint:fix": "run-s -c lint:ts:fix lint:css:fix",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "lint:css:fix": "npm run lint:css -- --fix",
    "lint:ts": "eslint \"**/*.{ts,tsx}\" --no-error-on-unmatched-pattern",
    "lint:css": "npx stylelint \"**/*.{css,scss}\"",
    "playwright:run": "npx playwright test",
    "playwright:open": "npx playwright test --ui",
    "playwright:run:e2e": "npx playwright test --config=playwright.e2e.config.ts",
    "playwright:open:e2e": "npx playwright test --ui --config=playwright.e2e.config.ts",
    "update-snapshots": "npx playwright test --update-snapshots",
    "generate-api-types": "docker-compose -f ./api-types/docker-compose.yml up --build ts_generator"
  },
  "dependencies": {
    "@emailjs/browser": "^3.6.2",
    "clsx": "^2.1.1",
    "cookies-next": "^6.0.0",
    "dotenv": "^17.2.1",
    "gitalk": "^1.7.2",
    "moment": "^2.29.4",
    "next": "^15.3.2",
    "next-i18next": "^8.6.0",
    "next-sitemap": "^3.1.11",
    "qs": "^6.14.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-focus-lock": "^2.13.6",
    "react-google-recaptcha": "^2.1.0",
    "react-markdown": "^8.0.7",
    "rehype-highlight": "^5.0.2",
    "rehype-raw": "^6.1.1",
    "remark-gfm": "^3.0.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "1.53.0",
    "@stylistic/eslint-plugin": "^1.6.3",
    "@stylistic/stylelint-config": "^1.0.1",
    "@types/node": "18.0.6",
    "@types/qs": "^6.14.0",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@types/react-google-recaptcha": "^2.1.5",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "14.1.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-newlines": "^1.4.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "next-react-svg": "1.1.3",
    "npm-run-all": "4.1.5",
    "sass": "1.53.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-order": "^6.0.4",
    "typescript": "^5.8.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "ie 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "ie 11"
    ]
  }
}
